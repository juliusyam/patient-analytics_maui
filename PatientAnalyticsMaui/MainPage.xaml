<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:PatientAnalyticsMaui.ViewModels"
             x:Class="PatientAnalyticsMaui.MainPage">
    <ContentPage.BindingContext>
        <ViewModel:UserViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="{Binding User.Username}" />

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="150"
                HorizontalOptions="Center" />

            <Label
                Text="Patient Analytics"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry
                x:Name="usernameInput"
                Placeholder="username-123"
                Keyboard="Plain"
                TextChanged="OnUsernameInputChanged"
                IsVisible="{Binding IsNotLoggedIn}" />

            <Entry
                x:Name="passwordInput"
                IsPassword="True"
                TextChanged="OnPasswordInputChanged"
                IsVisible="{Binding IsNotLoggedIn}" />

            <Button
                x:Name="CounterBtn"
                Text="Login"
                Clicked="OnLogin"
                HorizontalOptions="Center"
                IsVisible="{Binding IsNotLoggedIn}" />

            <Button
                x:Name="LogoutBtn"
                Text="Logout"
                Clicked="OnLogout"
                HorizontalOptions="Center"
                IsVisible="{Binding IsLoggedIn}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

